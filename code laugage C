#include <stdio.h>

// =============================
// Fonction PGCD (Algorithme d'Euclide)
// =============================
int pgcd(int a, int b) {
    while (b != 0) {
        int r = a % b;
        a = b;
        b = r;
    }
    return a;
}

// =============================
// Algorithme d'Euclide étendu
// Trouve x0 et y0 tels que : a*x0 + b*y0 = d = pgcd(a,b)
// =============================
int euclide_etendu(int a, int b, int *x0, int *y0) {
    if (b == 0) {
        *x0 = 1;
        *y0 = 0;
        return a;
    }
    int x1, y1;
    int d = euclide_etendu(b, a % b, &x1, &y1);
    
    *x0 = y1;
    *y0 = x1 - (a / b) * y1;

    return d;
}

int main() {
    int a, b, c;       // Coefficients de l'équation ax + by = c
    int d, x0, y0;     // PGCD et solution particulière

    printf("Entrer a, b et c (pour l'equation ax + by = c) : ");
    scanf("%d %d %d", &a, &b, &c);

    // 1) Calcul du PGCD
    d = pgcd(a, b);

    // 2) Vérification d'existence de solutions entières
    if (c % d != 0) {
        printf("\n❌ Il n'existe aucune solution entière.\n");
        return 0;
    }

    printf("\n✅ Il existe des solutions entières.\n");

    // 3) Trouver une solution particulière
    euclide_etendu(a, b, &x0, &y0);
    x0 *= c / d;
    y0 *= c / d;

    printf("\nSolution particulière : (x0, y0) = (%d, %d)\n", x0, y0);

    // 4) Solution générale
    printf("\nSolution générale :\n");
    printf("x = %d + (%d)*k\n", x0, b / d);
    printf("y = %d - (%d)*k\n", y0, a / d);
    printf("où k ∈ Z\n");

    return 0;
}
